# =============================================================================
# CONFIGURACIÓN DE EJEMPLO - db_watioverse
# =============================================================================
# Copiar este archivo como .env y configurar valores reales

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE BASES DE DATOS
# -----------------------------------------------------------------------------
# Conexiones principales eSCORE
DB_ESCORE_PESOS_HOST=localhost
DB_ESCORE_PESOS_PORT=5432
DB_ESCORE_PESOS_NAME=db_eSCORE_pesos
DB_ESCORE_PESOS_USER=tu_usuario
DB_ESCORE_PESOS_PASSWORD=tu_password

DB_ESCORE_MASTER_HOST=localhost
DB_ESCORE_MASTER_PORT=5432
DB_ESCORE_MASTER_NAME=db_eSCORE_master
DB_ESCORE_MASTER_USER=tu_usuario
DB_ESCORE_MASTER_PASSWORD=tu_password

# Pipeline N0-N3
DB_N0_HOST=localhost
DB_N0_PORT=5432
DB_N0_NAME=db_N0
DB_N0_USER=tu_usuario
DB_N0_PASSWORD=tu_password

DB_N1_HOST=localhost
DB_N1_PORT=5432
DB_N1_NAME=db_N1
DB_N1_USER=tu_usuario
DB_N1_PASSWORD=tu_password

DB_N2_HOST=localhost
DB_N2_PORT=5432
DB_N2_NAME=db_N2
DB_N2_USER=tu_usuario
DB_N2_PASSWORD=tu_password

DB_N3_HOST=localhost
DB_N3_PORT=5432
DB_N3_NAME=db_N3
DB_N3_USER=tu_usuario
DB_N3_PASSWORD=tu_password

# Bases auxiliares
DB_CATASTRO_HOST=localhost
DB_CATASTRO_PORT=5432
DB_CATASTRO_NAME=db_catastro
DB_CATASTRO_USER=tu_usuario
DB_CATASTRO_PASSWORD=tu_password

DB_ENRIQUECIMIENTO_HOST=localhost
DB_ENRIQUECIMIENTO_PORT=5432
DB_ENRIQUECIMIENTO_NAME=db_enriquecimiento
DB_ENRIQUECIMIENTO_USER=tu_usuario
DB_ENRIQUECIMIENTO_PASSWORD=tu_password

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE SEGURIDAD
# -----------------------------------------------------------------------------
# Salts para hashing (generar con: openssl rand -hex 32)
HASH_SALT_NIF_CIF=tu_salt_nif_cif_aqui_32_caracteres_hex
HASH_SALT_DIRECCION=tu_salt_direccion_aqui_32_caracteres_hex
HASH_SALT_CUPS=tu_salt_cups_aqui_32_caracteres_hex

# TTL para datos temporales (en segundos)
TTL_ENRIQUECIMIENTO_CACHE=86400  # 24 horas
TTL_AUDIT_LOG=2592000            # 30 días

# -----------------------------------------------------------------------------
# CONFIGURACIÓN APIS EXTERNAS
# -----------------------------------------------------------------------------
# AEMET - Agencia Estatal de Meteorología
AEMET_API_KEY=tu_clave_aemet_aqui
AEMET_BASE_URL=https://opendata.aemet.es/opendata/api

# CATASTRO - Dirección General del Catastro
CATASTRO_BASE_URL=http://ovc.catastro.meh.es/ovcservweb/OVCSWLocalizacionRC/OVCCallejero.asmx
CATASTRO_TIMEOUT=10

# OMIE - Operador del Mercado Ibérico de Energía
OMIE_BASE_URL=https://www.omie.es/es/file-download
OMIE_TIMEOUT=15

# REE - Red Eléctrica de España
REE_BASE_URL=https://apidatos.ree.es/es/datos
REE_TIMEOUT=15

# -----------------------------------------------------------------------------
# CONFIGURACIÓN RATE LIMITING
# -----------------------------------------------------------------------------
# Límites por API (requests por minuto)
RATE_LIMIT_AEMET=60
RATE_LIMIT_CATASTRO=30
RATE_LIMIT_OMIE=20
RATE_LIMIT_REE=40

# Timeouts generales (segundos)
DEFAULT_API_TIMEOUT=10
DEFAULT_DB_TIMEOUT=30

# -----------------------------------------------------------------------------
# CONFIGURACIÓN LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/db_watioverse.log

# -----------------------------------------------------------------------------
# CONFIGURACIÓN ENTORNO
# -----------------------------------------------------------------------------
ENVIRONMENT=development  # development, testing, production
DEBUG=true
